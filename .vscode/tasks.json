{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "simulate",
            "detail": "Launch Gazebo Simulation",
            "type": "shell",
            "command": "./tasks/simulate.sh ${input:sim_world}",
            "problemMatcher": []
        },
        {
            "label": "image bridge",
            "type": "shell",
            "command": "./tasks/image_bridge.sh",
            "problemMatcher": [],
            "detail": "Launch ros_gz_image bridge"
        },
        {
            "label": "simulate & image bridge & agent",
            "dependsOn": [
                "simulate",
                "image bridge",
                "agent"
            ],
            "detail": "Launch simulation, gz-ro2 image bridge and uxrce-dds agent",
            "problemMatcher": []
        },
        {
            "label": "agent",
            "detail": "Launch Micro XRCE Agent",
            "type": "shell",
            "command": "./tasks/agent.sh",
            "problemMatcher": []
        },
        {
            "label": "build",
            "detail": "Build workspace (default)",
            "type": "shell",
            "command": "./tasks/build.sh ${input:buildFolder}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "setup",
            "detail": "Set up the workspace",
            "type": "shell",
            "command": "./tasks/setup.sh",
            "problemMatcher": []
        },
        {
            "label": "gazebo kill",
            "type": "shell",
            "command": "rm -rfv /tmp/px4* || true && pkill -9 px4 || true && pkill -9 -f 'gz sim' || true",
            "presentation": {
            "echo": true,
            "reveal": "never",
            "revealProblems": "onProblem",
            "focus": false,
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": false,
            "close": true
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id" : "sim_world",
            "description": "Choose World to launch from",
            "type": "pickString",
            "options": [
                "openlanes",
                "fase1",
                "fase2",
                "fase3",
                "fase4",
                "default"
            ],
            "default": "openlanes"
        },
        {
            "id" : "buildFolder",
            "description": "Which targets to build?",
            "type": "pickString",
            "options": [
                "all",
                "dependencies",
                "gesture_packages",
                "cbr_2025",
                "robocup_2025",
                "sae_2025"
            ],
            "default": "all"
        }
    ]
}